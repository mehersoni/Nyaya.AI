{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LegalRights",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "right_id",
            "description",
            "granted_by"
        ],
        "properties": {
            "right_id": {
                "type": "string",
                "description": "Stable identifier (e.g., RIGHT_TO_REFUND)"
            },
            "description": {
                "type": "string",
                "description": "Verbatim or near-verbatim right text"
            },
            "granted_by": {
                "type": "string",
                "description": "section_id granting this right"
            }
        },
        "additionalProperties": false
    }
}