# Nyayamrit FastAPI Backend Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
HOST=127.0.0.1
PORT=8000
ENVIRONMENT=development
RELOAD=true
LOG_LEVEL=info

# Authentication Configuration
JWT_SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# LLM Provider Configuration
# OpenAI GPT-4 (optional)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Bhashini Translation API (optional)
BHASHINI_API_KEY=your-bhashini-api-key-here
BHASHINI_API_URL=https://bhashini.gov.in/api/v1

# Knowledge Graph Configuration
KNOWLEDGE_GRAPH_PATH=knowledge_graph
MAX_CONTEXT_LENGTH=8000

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./nyayamrit.db

# Redis Configuration (for caching, optional)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Configuration
TRUSTED_HOSTS=localhost,127.0.0.1,*.localhost

# Monitoring Configuration (optional)
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
DEBUG=true
TESTING=false